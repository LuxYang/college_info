doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
    +conf("校车查询")
    style(type='text/css').
      * {
      margin: 0px;
      padding: 0px;
      }
      body,
      button,
      input,
      select,
      textarea {
      font: 12px/16px Verdana, Helvetica, Arial, sans-serif;
      }
      p {
      width: 603px;
      padding-top: 3px;
      overflow: hidden;
      }
      .btn {
      width: 142px;
      }
    script(src='http://map.qq.com/api/js?v=2.exp', charset='utf-8')
  body(onload='init()')

    .weui-cells__title 切换时间
    .weui-cells
        .weui-cell
            .weui-cell__hd 
                label.weui-lable(for="") 时间
            .weui-cell__bd
                select.weui-select 
                    option(value="1") 周一，周二，周三，周四
                    option(value="2") 周五
                    option(value="3") 周六
                    option(value="3") 周日

    .weui-cells__title 班次列表

    -var info = [{content:"5元/人 （校车卡、微信）"},{class:"上午",content:["8:30", "9:30", "10:30", "11:30"]},{class:"下午",content:["8:30", "9:00", "9:30", "10:00"]}]

    .container
        .card-small
            .box
                each item in info
                    .weui-flex
                        if item.class
                            .weui-flex__item=item.class
                            .weui-flex__item=item.content

                          else
                            .weui-flex__item=item.content

    script.
      time = {
            "1":{
              "am":["8:30", "10:30"],
              "pm":["12:30", "15:30", "17:30"]
            },
            "2":{
              "am":["8:30", "9:30", "10:30", "11:30"],
              "pm":["12:30", "13:30", "14:30", "15:30", "16:30", "17:30"]
            },
            "3":{
              "am":["8:30", "9:00", "9:30", "10:00", "10:30", "11:00", "11:30"],
              "pm":["12:00", "13:00", "14:00", "15:00", "16:00", "17:00"]
            },
            "4":{
              "am":["8:30", "9:30", "10:30", "11:30"],
              "pm":["13:00", "14:00", "14:00", "15:00", "16:00", "17:00"]
            }                        
          }
       
        
      


    .weui-cells__title=校车路线

    .weui-cells__title 联系方式

    .weui-cells__title 校车位置

    script.
          var init = function() {
            var center = new qq.maps.LatLng(30.438707,114.295422);
            var cssC={color:"#ff3333",fontSize:"12px",fontWeight:"bold",margin:"-55px 0 0 -25px",border:"none",background:"none"};
            var map = new qq.maps.Map(document.getElementById('container'), {
                center: center,
                maxZoom:18,
                minZoom:8,
                zoom: 15,
                zoomControl: false
            });
              var marker = new qq.maps.Marker({
              position: center,
              map: map
            });
              var label = new qq.maps.Label({
              position: center,
              map: map,
              content:'校园巴士'
            });
              label.setStyle(cssC);
          }

    .weui-cells
        .container
            #container.container(style='width:auto;height:380px')
