head
    include ../common/conf.jade
    title 成绩查询

body
    .weui-cells 
        .weui-cell.weui-cell_select.weui-cell_select-after
            .weui-cell__hd 
                label.weui-lable(for="") 时间
            .weui-cell__bd
                select.weui-select 
                    option(value="1") 大一上学期
                    option(value="2") 大一下学期


            -var grade = [ {course:"课程",grade:"成绩",credits:"学分",item:"类别",top:"排名"},{course:"高等数学",grade:"89",credits:"4",item:"必修",top:"6"},{course:"计算机导论",grade:"98",credits:"4",item:"必修",top:"2"},{course:"大学英语",grade:"92",credits:"4",item:"必修",top:"8"}]
    .container
    each grades in grade
        .weui-flex    
            .weui-flex__item=grades.course
            .weui-flex__item=grades.grade
            .weui-flex__item=grades.credits
            .weui-flex__item=grades.item
            .weui-flex__item=grades.top



    include ../common/footer.jade

